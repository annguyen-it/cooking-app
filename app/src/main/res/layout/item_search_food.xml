<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="174dp"
        android:layout_height="129dp"
        android:contentDescription="@string/img_food"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/txtNameFood"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgFood"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFood" />

    <RatingBar
        android:id="@+id/rtbDetailsRating"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="176dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:progressTint="@android:color/holo_orange_light"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:transformPivotX="0dp"
        app:layout_constraintEnd_toEndOf="@+id/txtNameFood"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtNameFood"
        app:layout_constraintTop_toBottomOf="@+id/txtNameFood" />
</androidx.constraintlayout.widget.ConstraintLayout>
