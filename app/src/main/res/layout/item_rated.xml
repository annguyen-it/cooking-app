<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_height="match_parent"
    android:paddingStart="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">


    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCmt" />

    <RatingBar
        android:id="@+id/rtbRated"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="186dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:progressTint="@android:color/holo_orange_light"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/txtNameUserRated"
        app:layout_constraintTop_toBottomOf="@+id/txtNameUserRated" />

    <TextView
        android:id="@+id/txtNameUserRated"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCmt"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/rtbRated"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rtbRated"
        app:layout_constraintTop_toBottomOf="@+id/rtbRated" />

    <TextView
        android:id="@+id/txtTimeCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/txtNameUserRated"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="26dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_heart"/>
</androidx.constraintlayout.widget.ConstraintLayout>